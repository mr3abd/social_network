<%= provide(:title, @user.name)%>
<div class="row">
  <div class ="col-md-3">
    <%= gravatar_for @user%>
    <br>
    <%= @user.name%>
    <br>
    <%= @user.email%>
  </div>
  <div class="col-md-9">
    <h1>My posts</h1>
    <ul>
      <% @posts.each do |post|%>
        <li><%= post.title%></li>
        <li><%= post.body%></li>
      <%end%>
    <ul>
  </div>
</div>
